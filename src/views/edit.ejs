<div class="col-md-5">
    <div class="card">
        <div class="card-body">
            <form action="/update/<%= task._id %>" method="post">
                <div class="form-group mb-2">
                    <input type="text" name="title" value="" placeholder="Title" class="form-control"
                        value="<%= task.title %>">
                </div>
                <div class="form-group mb-2">
                    <textarea name="description" cols="80" placeholder="Description" class="form-control"
                        value="<%= task.description %>"></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>